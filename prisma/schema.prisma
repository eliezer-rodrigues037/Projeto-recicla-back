generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  Admin
  User
}

enum Entity {
  fisica
  juridica
}

model User {
  identificador          String    @id @default(uuid())
  name                   String
  email                  String    @unique
  cpf                    String    @unique
  cel                    String?
  birthDate              DateTime
  role                   UserRole? @default(User)
  password               String
  avatar                 String?
  password_reset_token   String?
  password_reset_expires DateTime?
  created_at             DateTime  @default(now())
  updated_at             DateTime  @updatedAt
  Banc                   Banc[]

  @@map("users")
}

model Banc {
  id            String @id @default(uuid())
  userId        String
  user          User   @relation(fields: [userId], references: [identificador])
  accountOwner  String
  cpf           String
  entity        Entity @default(fisica)
  banc          String
  agencyNumber  String
  agencyDg      String
  accountNumber String
  accountDg     String
}
